{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]
  }